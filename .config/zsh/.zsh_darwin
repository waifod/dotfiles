# Work aliases
alias bb="brazil-build"
alias bws="brazil workspace"
alias bmg='bemol --generate-vscode-ws $(basename $PWD).code-workspace'

# ensure to run `mwinit -o && kinit -f` on your cloud desktop first
alias ninja-dev-ws=ninja-dev-sync -add "$(pwd)" -add-host clouddesk -add-remote /home/$(whoami)/workplace/"${PWD##*/}" -setup

# AWS CLI completion
complete -C '/usr/local/bin/aws_completer' aws

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

setup-credentials() {
  kinit
  mwinit -s
  ssh-add
  ssh clouddesk -t 'kinit -f && mwinit -s -o && ssh-add'
  ada cred update --once
  aws codeartifact login --region us-west-2 --tool npm --domain amazon --domain-owner 730335472693 --repository shared
  screen -S ninja -d -m nohup ninja-dev-sync
}
