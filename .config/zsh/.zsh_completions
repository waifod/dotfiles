# Completion loading
# Note: compinit is already called in .zshrc before this file is sourced

# Bash completion support is already loaded in .zshrc
# autoload bashcompinit && bashcompinit (removed - already done)

# Auto-completes a path by typing the first letter of each directory
setopt auto_menu
setopt auto_list
setopt menu_complete

# FZF-tab and completion styles
eval "$(fzf --zsh)"
zstyle ':completion:*:git-checkout:*' sort false
zstyle ':completion:*:descriptions' format '[%d]'
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'eza -1 --color=always $realpath'
zstyle ':fzf-tab:*' switch-group '<' '>'
zstyle ':fzf-tab:*' fzf-command ftb-tmux-popup
