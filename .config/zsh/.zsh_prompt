# Refer to https://dev.to/cassidoo/customizing-my-zsh-prompt-3417
autoload -Uz vcs_info
precmd() { vcs_info }

zstyle ':vcs_info:git:*' formats '%b'

setopt PROMPT_SUBST
PROMPT='
%F{cyan}%n%f%F{red}@%f%F{green}%m%f %F{yellow}%~%f %F{magenta}${vcs_info_msg_0_}%f %F{red}%a%f
%F{cyan}%D{%H:%M:%S}%f %F{yellow}$%f '
