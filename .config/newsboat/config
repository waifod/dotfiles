# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Newsboat Main Configuration File
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
include ~/.config/newsboat/theme
include ~/.config/newsboat/bindings
include ~/.config/newsboat/macros

# --- General Behavior ---
confirm-exit yes
cleanup-on-quit yes
delete-read-articles-on-quit no
article-sort-order "date-asc"

# --- Performance & Caching ---
auto-reload yes
reload-threads 2
reload-time 60
max-items 200

# --- Notifications ---
notify-always yes
notify-format "Newsboat: %f unread feeds (%n new articles)"

# --- External URL & Content Handling ---
browser "`echo $BROWSER` %u"
external-url-viewer "urlview"

# --- UI & Information Density ---
datetime-format "%d %b %Y"
feedlist-format "%4i %n %?T??%-50t %-12u %T"
articlelist-format "%4i %f  %-15D [%-20a] %t"
feedlist-title-format    "Feeds - %u unread, %t total"
articlelist-title-format "Articles in '%T' - %u unread, %t total"

# --- Noise Suppression ---
# Uncomment to filter out weekly summaries if they become overwhelming
#ignore-article "*" "title =~ \"(Weekly Summary|Roundup)\""

# --- Feed Display Priorities ---
# Show unread counts more prominently for priority feeds
show-read-feeds yes
show-read-articles yes

# --- Article Age ---
# Keep articles for 30 days before cleanup
keep-articles-days 30
