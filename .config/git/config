[user]
	name = Matteo Durante
  email = waifod@pm.me

[includeIf "gitdir/i:/Volumes/workplace/"]
  path = ~/.config/git/workplace

[branch]
	sort = -committerdate

[tag]
	sort = version:refname

[color]
	ui = auto

[column]
	ui = auto

[help]
	autocorrect = prompt

[commit]
	verbose = true

[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.config/git/ignore
	fsmonitor = true
	untrackedCache = true

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	true-color = always
	side-by-side = true
	line-numbers = true
	syntax-theme = gruvbox-dark
	minus-style = syntax
	plus-style = syntax

[diff]
	algorithm = histogram
	colorMoved = plain

[fetch]
	prune = true
	pruneTags = true

[merge]
	conflictStyle = zdiff3

[rebase]
	autoStash = true
	autoSquash = true

[pull]
	rebase = true

[push]
	default = simple
	autoSetupRemote = true

[log]
	abbrevCommit = true
	date = iso

[init]
  defaultBranch = main

[credential]
  helper = cache

